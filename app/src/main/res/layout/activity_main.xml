<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/alertDialog"
        android:text="Тревожная кнопка"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/alertDialog3"
        android:text="Тревожная кнопка2"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/alertDialogList"
        android:text="AlertDialog with list"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/alertDialogListSingleChoose"
        android:text="AlertDialog with list one choose"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/alertDialogListMultyChoose"
        android:text="AlertDialog with list with multi choose"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/alertDialogCustom"
        android:text="AlertDialog CustomView"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/DialogFragmentWithBuilder"
        android:text="DialogFragmentWithBuilder"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/DialogFragmentWithCustomView"
        android:text="DialogFragmentWithCustomView"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>